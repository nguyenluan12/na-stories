model audio {
    id       String  @id @default(cuid())
    audioUrl String?
}

model User {
    id        String   @id @default(dbgenerated("concat('usr_', replace(cast(gen_random_uuid() as text), '-', ''))")) @db.Text
    email     String   @unique
    name      String?
    avatar    String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

