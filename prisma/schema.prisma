generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model lesson_cloze {
    id     String @id @default(cuid())
    title  String
    lesson Json?
}

model lesson_listen_read {
    id     String @id @default(cuid())
    title  String
    lesson Json?
}

